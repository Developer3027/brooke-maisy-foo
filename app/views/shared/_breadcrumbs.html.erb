<nav class="bg-ivory-50 border-b border-ivory-200 py-3" aria-label="Breadcrumb">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <ol class="flex items-center space-x-2 text-sm">
      <!-- Home -->
      <li>
        <%= link_to root_path, class: "text-ivory-600 hover:text-ivory-800 transition-colors" do %>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
          </svg>
          <span class="sr-only">Home</span>
        <% end %>
      </li>

      <!-- Dynamic breadcrumb items -->
      <% breadcrumbs.each_with_index do |breadcrumb, index| %>
        <li class="flex items-center">
          <!-- Separator -->
          <svg class="w-4 h-4 text-ivory-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          
          <!-- Breadcrumb link or text -->
          <% if index == breadcrumbs.length - 1 %>
            <!-- Last item (current page) -->
            <span class="text-ivory-800 font-medium" aria-current="page">
              <%= breadcrumb[:text] %>
            </span>
          <% else %>
            <!-- Intermediate items -->
            <%= link_to breadcrumb[:url], class: "text-ivory-600 hover:text-ivory-800 transition-colors" do %>
              <%= breadcrumb[:text] %>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ol>
  </div>
</nav>