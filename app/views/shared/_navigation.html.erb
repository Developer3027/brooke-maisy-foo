<nav class="bg-ivory-50 shadow-sm sticky top-0 z-50 border-b border-ivory-200 font-family-playfair">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <div class="w-10 h-10 bg-gradient-to-br from-pastel-pink to-pastel-lavender rounded-full flex items-center justify-center">
            <span class="text-ivory-800 font-bold text-sm p-2">B&M</span>
          </div>
          <span class="text-2xl  text-ivory-800 hidden sm:block">BROOKE & MAISY</span>
        <% end %>
      </div>
      
      <!-- Main Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <!-- Shop Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button data-action="click->dropdown#toggle"
                  class="flex items-center space-x-1 text-ivory-700 hover:text-ivory-900 font-medium transition-colors">
            <span>Shop</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          
          <div data-dropdown-target="menu"
               class="hidden absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 border border-ivory-200">
            <%= link_to "All Products", products_path,
                class: "block px-4 py-2 text-sm text-ivory-700 hover:bg-ivory-50 transition-colors" %>
            <%= link_to "Categories", categories_path,
                class: "block px-4 py-2 text-sm text-ivory-700 hover:bg-ivory-50 transition-colors" %>
            <div class="border-t border-ivory-200 my-1"></div>
            <% Category.active.ordered.limit(5).each do |category| %>
              <%= link_to category.name, category_path(category),
                  class: "block px-4 py-2 text-sm text-ivory-700 hover:bg-ivory-50 transition-colors" %>
            <% end %>
          </div>
        </div>
        
        <%= link_to "Blog", "#",
            class: "text-ivory-700 hover:text-ivory-900 font-medium transition-colors" %>
        <%= link_to "About", "#",
            class: "text-ivory-700 hover:text-ivory-900 font-medium transition-colors" %>
        <%= link_to "Contact", "#",
            class: "text-ivory-700 hover:text-ivory-900 font-medium transition-colors" %>
      </div>
      
      <!-- Search Bar -->
      <div class="hidden lg:flex items-center">
        <%= form_with url: search_products_path, method: :get, local: true, class: "relative" do |form| %>
          <div class="relative">
            <%= form.text_field :q,
                placeholder: "Search products...",
                value: params[:q],
                class: "w-64 pl-10 pr-4 py-2 border border-ivory-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-ivory-500 focus:border-transparent bg-white" %>
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-4 w-4 text-ivory-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- User Actions -->
      <div class="flex items-center space-x-6">
        <!-- Cart -->
        <!-- Turbo frame here Cart-content -->
          <%= link_to cart_path, class: "relative p-2 mt-2 text-ivory-700 hover:text-ivory-900 transition-colors" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.5 6M7 13l-1.5 6m0 0h9"></path>
            </svg>
            <!-- Cart count badge -->
            <% if cart_item_count > 0 %>
              <span class="absolute -top-1 -right-1 bg-pastel-pink text-ivory-800 rounded-full w-5 h-5 flex items-center justify-center text-xs font-medium" data-cart-count>
                <%= cart_item_count %>
              </span>
            <% else %>
              <span class="absolute -top-1 -right-1 bg-pastel-pink text-ivory-800 rounded-full w-5 h-5 flex items-center justify-center text-xs font-medium" data-cart-count>
                0
              </span>
            <% end %>
          <% end %>
        <!-- End Cart -->
        
        <!-- User Menu -->
        <% if user_signed_in? %>
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle" 
                    class="flex items-center space-x-1 text-ivory-700 hover:text-ivory-900 transition-colors">
              <% if current_user.avatar_url.present? %>
                <img src="<%= current_user.avatar_url %>" 
                     alt="<%= current_user.display_name %>"
                     class="w-8 h-8 rounded-full">
              <% else %>
                <div class="w-8 h-8 bg-pastel-mint rounded-full flex items-center justify-center">
                  <span class="text-ivory-800 font-medium text-sm">
                    <%= current_user.display_name.first.upcase %>
                  </span>
                </div>
              <% end %>
              <span class="hidden sm:block"><%= current_user.first_name || current_user.email.split('@').first %></span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            
            <div data-dropdown-target="menu" 
                 class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 border border-ivory-200">
              <%= link_to "My Account", "#",
                  class: "block px-4 py-2 text-sm text-ivory-700 hover:bg-ivory-50 transition-colors" %>
              <%= link_to "My Cart", cart_path,
                  class: "block px-4 py-2 text-sm text-ivory-700 hover:bg-ivory-50 transition-colors" %>
              <%= link_to "Order History", "#",
                  class: "block px-4 py-2 text-sm text-ivory-700 hover:bg-ivory-50 transition-colors" %>
              <% if current_user.admin? %>
                <div class="border-t border-ivory-200 my-1"></div>
                <%= link_to "Admin Dashboard", admin_root_path,
                    class: "block px-4 py-2 text-sm text-ivory-700 hover:bg-ivory-50 transition-colors" %>
              <% end %>
              <div class="border-t border-ivory-200 my-1"></div>
              <%= button_to "Sign Out", destroy_user_session_path, 
                  method: :delete,
                  class: "block w-full text-left px-4 py-2 text-sm text-ivory-700 hover:bg-ivory-50 transition-colors" %>
            </div>
          </div>
        <% else %>
          <div class="flex items-center space-x-2">
            <%= link_to "Sign In", new_user_session_path, 
                class: "text-ivory-700 hover:text-ivory-900 font-medium transition-colors" %>
            <span class="text-ivory-400">|</span>
            <%= link_to "Sign Up", new_user_registration_path, 
                class: "bg-ivory-500 hover:bg-ivory-600 text-white px-4 py-2 rounded-md font-medium transition-colors" %>
          </div>
        <% end %>
        
        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button data-controller="mobile-menu" 
                  data-action="click->mobile-menu#toggle"
                  class="text-ivory-700 hover:text-ivory-900 p-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Mobile Navigation Menu -->
    <div data-mobile-menu-target="menu" class="hidden md:hidden border-t border-ivory-200 py-4">
      <div class="flex flex-col space-y-2">
        <!-- Mobile Search -->
        <div class="mb-4">
          <%= form_with url: search_products_path, method: :get, local: true, class: "relative" do |form| %>
            <div class="relative">
              <%= form.text_field :q,
                  placeholder: "Search products...",
                  value: params[:q],
                  class: "w-full pl-10 pr-4 py-2 border border-ivory-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-ivory-500 focus:border-transparent bg-white" %>
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-4 w-4 text-ivory-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
            </div>
          <% end %>
        </div>
        
        <%= link_to "All Products", products_path,
            class: "text-ivory-700 hover:text-ivory-900 font-medium py-2 transition-colors" %>
        <%= link_to "Categories", categories_path,
            class: "text-ivory-700 hover:text-ivory-900 font-medium py-2 transition-colors" %>
        
        <!-- Mobile Category Links -->
        <div class="pl-4 space-y-1">
          <% Category.active.ordered.limit(5).each do |category| %>
            <%= link_to category.name, category_path(category),
                class: "block text-ivory-600 hover:text-ivory-800 text-sm py-1 transition-colors" %>
          <% end %>
        </div>
        
        <%= link_to "Blog", "#",
            class: "text-ivory-700 hover:text-ivory-900 font-medium py-2 transition-colors" %>
        <%= link_to "About", "#",
            class: "text-ivory-700 hover:text-ivory-900 font-medium py-2 transition-colors" %>
        <%= link_to "Contact", "#",
            class: "text-ivory-700 hover:text-ivory-900 font-medium py-2 transition-colors" %>
      </div>
    </div>
  </div>
</nav>