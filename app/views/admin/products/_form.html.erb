<%= form_with model: [:admin, @product], local: true, multipart: true, class: "space-y-6" do |f| %>
  <% if @product.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(@product.errors.count, "error") %> with your submission:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Product Information -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Basic Information</h3>
          
          <div class="space-y-4">
            <!-- Product Name -->
            <div>
              <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :name, 
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-pink-400 focus:border-pink-400",
                  placeholder: "Enter product name" %>
            </div>
            
            <!-- Description -->
            <div>
              <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :description, 
                  rows: 4,
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-pink-400 focus:border-pink-400",
                  placeholder: "Describe your product..." %>
            </div>
            
            <!-- Category -->
            <div>
              <%= f.label :category_id, "Category", class: "block text-sm font-medium text-gray-700" %>
              <%= f.select :category_id, 
                  options_from_collection_for_select(@categories, :id, :name, @product.category_id),
                  { prompt: "Select a category" },
                  { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-pink-400 focus:border-pink-400" } %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Pricing and Inventory -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Pricing & Inventory</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Price -->
            <div>
              <%= f.label :price, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <span class="text-gray-500 sm:text-sm">$</span>
                </div>
                <%= f.number_field :price, 
                    step: 0.01,
                    class: "block w-full pl-7 border-gray-300 rounded-md shadow-sm focus:ring-pink-400 focus:border-pink-400",
                    placeholder: "0.00" %>
              </div>
            </div>
            
            <!-- Inventory Count -->
            <div>
              <%= f.label :inventory_count, "Inventory", class: "block text-sm font-medium text-gray-700" %>
              <%= f.number_field :inventory_count, 
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-pink-400 focus:border-pink-400",
                  placeholder: "0" %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Product Details -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Product Details</h3>
          
          <div class="space-y-4">
            <!-- Weight -->
            <div>
              <%= f.label :weight, "Weight (oz)", class: "block text-sm font-medium text-gray-700" %>
              <%= f.number_field :weight, 
                  step: 0.1,
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-pink-400 focus:border-pink-400",
                  placeholder: "0.0" %>
            </div>
            
            <!-- Dimensions -->
            <div>
              <%= f.label :dimensions, class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :dimensions, 
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-pink-400 focus:border-pink-400",
                  placeholder: "L x W x H (inches)" %>
            </div>
            
            <!-- Materials -->
            <div>
              <%= f.label :materials, class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :materials, 
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-pink-400 focus:border-pink-400",
                  placeholder: "Cotton, Wool, etc." %>
            </div>
            
            <!-- Care Instructions -->
            <div>
              <%= f.label :care_instructions, class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :care_instructions, 
                  rows: 3,
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-pink-400 focus:border-pink-400",
                  placeholder: "How to care for this product..." %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Product Status -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Status</h3>
          
          <div class="space-y-4">
            <!-- Active Status -->
            <div class="flex items-center">
              <%= f.check_box :active, class: "h-4 w-4 text-pink-400 focus:ring-pink-400 border-gray-300 rounded" %>
              <%= f.label :active, "Active", class: "ml-2 block text-sm text-gray-900" %>
              <p class="ml-6 text-xs text-gray-500">Product is visible to customers</p>
            </div>
            
            <!-- Featured Status -->
            <div class="flex items-center">
              <%= f.check_box :featured, class: "h-4 w-4 text-pink-400 focus:ring-pink-400 border-gray-300 rounded" %>
              <%= f.label :featured, "Featured", class: "ml-2 block text-sm text-gray-900" %>
              <p class="ml-6 text-xs text-gray-500">Show in featured products section</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Product Images -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Product Images</h3>
          
          <!-- Current Images -->
          <% if @product.images.attached? %>
            <div class="grid grid-cols-2 gap-2 mb-4">
              <% @product.images.each do |image| %>
                <div class="relative">
                  <%= image_tag image, class: "w-full h-24 object-cover rounded-lg" %>
                  <button type="button" class="absolute top-1 right-1 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-xs hover:bg-red-600">
                    Ã—
                  </button>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <!-- Image Upload -->
          <div>
            <%= f.label :images, "Upload Images", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md hover:border-pink-400 transition-colors">
              <div class="space-y-1 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                  <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <div class="flex text-sm text-gray-600">
                  <%= f.file_field :images, 
                      multiple: true,
                      accept: "image/*",
                      class: "sr-only",
                      id: "file-upload" %>
                  <label for="file-upload" class="relative cursor-pointer bg-white rounded-md font-medium text-pink-400 hover:text-pink-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-pink-400">
                    <span>Upload files</span>
                  </label>
                  <p class="pl-1">or drag and drop</p>
                </div>
                <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB each</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="space-y-3">
            <%= f.submit @product.persisted? ? "Update Product" : "Create Product", 
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-400 hover:bg-pink-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-400 transition-colors" %>
            
            <%= link_to "Cancel", @product.persisted? ? admin_product_path(@product) : admin_products_path, 
                class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-400 transition-colors" %>
            
            <% if @product.persisted? %>
              <%= link_to "Delete Product", admin_product_path(@product), 
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this product?" },
                  class: "w-full flex justify-center py-2 px-4 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-400 transition-colors" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>