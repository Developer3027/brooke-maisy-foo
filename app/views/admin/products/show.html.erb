<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @product.name %></h1>
      <p class="mt-1 text-sm text-gray-500">
        SKU: <%= @product.sku %>
      </p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit Product", edit_admin_product_path(@product), 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-400 hover:bg-pink-500 transition-colors" %>
      <%= link_to "Duplicate", duplicate_admin_product_path(@product), 
          method: :post,
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" %>
      <%= link_to "Delete", admin_product_path(@product), 
          method: :delete,
          data: { confirm: "Are you sure you want to delete this product?" },
          class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 transition-colors" %>
    </div>
  </div>
  
  <!-- Status Badges -->
  <div class="flex items-center space-x-2">
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @product.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
      <%= @product.active? ? 'Active' : 'Inactive' %>
    </span>
    <% if @product.featured? %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
        Featured
      </span>
    <% end %>
    <% if @product.out_of_stock? %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
        Out of Stock
      </span>
    <% elsif @product.low_stock? %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
        Low Stock
      </span>
    <% end %>
  </div>
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Product Images -->
      <% if @product.images.attached? %>
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Product Images</h3>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              <% @product.images.each do |image| %>
                <div class="aspect-w-1 aspect-h-1">
                  <%= image_tag image, class: "w-full h-32 object-cover rounded-lg" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      
      <!-- Product Information -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Product Information</h3>
          
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Name</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @product.name %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Category</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @product.category.name %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Price</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @product.display_price %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Inventory</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @product.inventory_count %></dd>
            </div>
            
            <% if @product.weight.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Weight</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @product.formatted_weight %></dd>
              </div>
            <% end %>
            
            <% if @product.dimensions.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Dimensions</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @product.dimensions %></dd>
              </div>
            <% end %>
            
            <% if @product.materials.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Materials</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @product.materials %></dd>
              </div>
            <% end %>
          </dl>
          
          <% if @product.description.present? %>
            <div class="mt-6">
              <dt class="text-sm font-medium text-gray-500">Description</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= simple_format(@product.description) %></dd>
            </div>
          <% end %>
          
          <% if @product.care_instructions.present? %>
            <div class="mt-6">
              <dt class="text-sm font-medium text-gray-500">Care Instructions</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= simple_format(@product.care_instructions) %></dd>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Product Variants -->
      <% if @variants.any? %>
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Product Variants</h3>
              <%= link_to "Add Variant", "#", 
                  class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-pink-700 bg-pink-100 hover:bg-pink-200 transition-colors" %>
            </div>
            
            <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
              <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Variant</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Inventory</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @variants.each do |variant| %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= variant.name %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        $<%= variant.price %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <%= variant.inventory_count %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= variant.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                          <%= variant.active? ? 'Active' : 'Inactive' %>
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <%= link_to "Edit", "#", class: "text-pink-400 hover:text-pink-500" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>
      
      <!-- Recent Orders -->
      <% if @recent_orders.any? %>
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Orders</h3>
            
            <div class="space-y-3">
              <% @recent_orders.each do |order_item| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div>
                    <p class="text-sm font-medium text-gray-900">Order #<%= order_item.order.id %></p>
                    <p class="text-sm text-gray-500">
                      <%= order_item.quantity %> Ã— <%= order_item.price %>
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium text-gray-900">
                      $<%= order_item.quantity * order_item.price %>
                    </p>
                    <p class="text-sm text-gray-500">
                      <%= order_item.created_at.strftime("%b %d, %Y") %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Quick Actions -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Quick Actions</h3>
          
          <div class="space-y-3">
            <%= link_to toggle_active_admin_product_path(@product), 
                method: :patch,
                class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
              <%= @product.active? ? "Deactivate" : "Activate" %> Product
            <% end %>
            
            <%= link_to toggle_featured_admin_product_path(@product), 
                method: :patch,
                class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
              <%= @product.featured? ? "Remove from Featured" : "Add to Featured" %>
            <% end %>
            
            <%= link_to "View on Site", "#", 
                target: "_blank",
                class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" %>
          </div>
        </div>
      </div>
      
      <!-- Product Stats -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Statistics</h3>
          
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Average Rating</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <div class="flex items-center">
                  <span class="text-lg font-semibold"><%= @product.average_rating %></span>
                  <div class="ml-2 flex items-center">
                    <% 5.times do |i| %>
                      <svg class="h-4 w-4 <%= i < @product.average_rating ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Total Reviews</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @product.reviews_count %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Created</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @product.created_at.strftime("%B %d, %Y") %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @product.updated_at.strftime("%B %d, %Y") %></dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>