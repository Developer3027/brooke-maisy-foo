<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= @category.name %></h1>
      <p class="mt-1 text-sm text-gray-500">
        Category details and products
      </p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit Category", edit_admin_category_path(@category), 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-400 hover:bg-pink-500 transition-colors" %>
      <%= link_to "Delete", admin_category_path(@category), 
          method: :delete,
          data: { confirm: "Are you sure you want to delete this category?" },
          class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 transition-colors" %>
    </div>
  </div>
  
  <!-- Status Badge -->
  <div class="flex items-center space-x-2">
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @category.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
      <%= @category.active? ? 'Active' : 'Inactive' %>
    </span>
  </div>
  
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Category Information -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Category Information</h3>
          
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Name</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @category.name %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Position</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @category.position %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Slug</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @category.slug %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @category.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= @category.active? ? 'Active' : 'Inactive' %>
                </span>
              </dd>
            </div>
          </dl>
          
          <% if @category.description.present? %>
            <div class="mt-6">
              <dt class="text-sm font-medium text-gray-500">Description</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= simple_format(@category.description) %></dd>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Products in Category -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Products in this Category</h3>
            <%= link_to "Add Product", new_admin_product_path(category_id: @category.id), 
                class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-pink-700 bg-pink-100 hover:bg-pink-200 transition-colors" %>
          </div>
          
          <% if @products.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% @products.each do |product| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                  <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0">
                      <% if product.main_image %>
                        <%= image_tag product.main_image, class: "h-12 w-12 rounded-lg object-cover" %>
                      <% else %>
                        <div class="h-12 w-12 rounded-lg bg-gray-200 flex items-center justify-center">
                          <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate">
                        <%= link_to product.name, admin_product_path(product), class: "hover:text-pink-400" %>
                      </p>
                      <p class="text-sm text-gray-500"><%= product.display_price %></p>
                    </div>
                    <div class="flex-shrink-0">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= product.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= product.active? ? 'Active' : 'Inactive' %>
                      </span>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            
            <% if @category.products.count > @products.count %>
              <div class="mt-4 text-center">
                <%= link_to "View All Products (#{@category.products.count})", admin_products_path(category: @category.id), 
                    class: "text-sm font-medium text-pink-400 hover:text-pink-500" %>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No products</h3>
              <p class="mt-1 text-sm text-gray-500">Get started by creating a new product in this category.</p>
              <div class="mt-6">
                <%= link_to "Add Product", new_admin_product_path(category_id: @category.id), 
                    class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-pink-400 hover:bg-pink-500 transition-colors" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Quick Actions -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Quick Actions</h3>
          
          <div class="space-y-3">
            <%= link_to toggle_active_admin_category_path(@category), 
                method: :patch,
                class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
              <%= @category.active? ? "Deactivate" : "Activate" %> Category
            <% end %>
            
            <%= link_to move_up_admin_category_path(@category), 
                method: :patch,
                class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
              Move Up
            <% end %>
            
            <%= link_to move_down_admin_category_path(@category), 
                method: :patch,
                class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
              Move Down
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Category Stats -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Statistics</h3>
          
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Total Products</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @category.products_count %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Active Products</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @category.products.where(active: true).count %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Created</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @category.created_at.strftime("%B %d, %Y") %></dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @category.updated_at.strftime("%B %d, %Y") %></dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>